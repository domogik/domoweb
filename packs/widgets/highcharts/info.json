{
    "json_version" : 1,
    "identity" : {
        "type" : "dmw_widgetset",
        "id" : "highcharts",
        "version" : 1,
        "name" : "HighCharts Graphs",
        "description" : "Widgets for graphs using the HighCHarts library (http://www.highcharts.com)",
        "author" : "Ferllings, Domos",
        "author_email" : "cedric@domogik.org, domos.vesta@gmail.com"
    },
    "widgets": {
        "lineChart": {
            "dev" : true,
            "name" : "Line Chart",
            "description" : "Simple Line Chart",
            "height" : 4,
            "width" : 6,
            "min_height" : 4,
            "min_width" : 6,
            "max_height" : 8,
            "max_width" : 12,
            "default_style" : false,
            "options" : {
                "title" : {
                    "name": "Graph Title",
                    "type": "string",
                    "default": "Graph",
                    "required": true
                },
                "subtitle" : {
                    "name": "Sub Title",
                    "type": "string",
                    "default": "",
                    "required": false
                }
            },
            "sensors" : {
                "series" : {
                    "name": "Data",
                    "description": "Data series",
                    "types" : ["DT_Number"],
                    "group": true,
                    "groupmin": 1,
                    "groupmax": 5
                }
            }
        },
        "sensorNumberChart": {
            "name" : "Number highchart",
            "height" : 2,
            "width" : 2,
            "min_height" : 1,
            "min_width" : 1,
            "max_height" : 4,
            "max_width" : 4,
            "options" : {
                "hideLabels" : {
                    "name": "Hide the widget labels",
                    "description": "Hide the top and left widget labels",
                    "type": "boolean",
                    "default": true
                },
                "autoconvert" : {
                    "name": "Automatic conversion",
                    "description": "Automatically convert big value to K(x) / M(x) / G(x) / T(x)",
                    "type": "boolean",
                    "default": "False"
                },
                "precision" : {
                    "name": "Number precision",
                    "description": "Set the numeric precision",
                    "type": "number",
                    "default": "1"
                },
                "color" : {
                    "name": "HighStock line graph color",
                    "description": "HighStock line graph color",
                    "type": "color",
                    "default": "#848484"
                },
                "theme" : {
                    "name": "HighStock Theme",
                    "description": "HighStock Theme (not used yet)",
                    "type": "string",
                    "default": "sunset"
                }
            },
            "sensors" : {
                "primary" : {
                    "name": "Sensor",
                    "description": "A number sensor",
                    "types" : ["DT_Number"],
                    "required": true
                }
            }
        },
        "sensorBoolChart": {
            "name" : "Bool highchart",
            "height" : 2,
            "width" : 2,
            "min_height" : 1,
            "min_width" : 1,
            "max_height" : 4,
            "max_width" : 4,
            "options" : {
                "hideLabels" : {
                    "name": "Hide the widget labels",
                    "description": "Hide the top and left widget labels",
                    "type": "boolean",
                    "default": true
                },
                "color" : {
                    "name": "HighStock line graph color",
                    "description": "HighStock line graph color",
                    "type": "color",
                    "default": "#848484"
                },
                "theme" : {
                    "name": "HighStock Theme",
                    "description": "HighStock Theme (not used yet)",
                    "type": "string",
                    "default": "sunset"
                }
            },
            "sensors" : {
                "primary" : {
                    "name": "Sensor",
                    "description": "A bool sensor",
                    "types" : ["DT_Bool"],
                    "required": true
                }
            }
        }
    }
}
