{
    "json_version" : 2,
    "identity" : {
        "type" : "dmw_widgetset",
        "id" : "c3_charts",
        "version" : 1,
        "name" : "Charts",
        "description" : "Basic charts widgets with c3.js",
        "author" : "Fritz SMH",
        "author_email" : "fritz.smh@gmail.com"
    },
    "widgets": {
        "spline": {
            "name" : "Spline chart",
            "height" : 3,
            "width" : 4,
            "min_height" : 2,
            "min_width" : 4,
            "max_height" : 6,
            "max_width" : 10,
            "options" : {
                "hideLabels" : {
                    "name": "Hide the widget labels",
                    "description": "Hide the top and left widget labels",
                    "type": "boolean",
                    "default": "False"
                },
                "chartMinValue" : {
                    "name": "Chart minimun value",
                    "description": "Set the chart minimum value",
                    "type": "number",
                    "default": null,
                    "required": false
                },
                "chartMaxValue" : {
                    "name": "Chart maximum value",
                    "description": "Set the chart maximum value",
                    "type": "number",
                    "default": null,
                    "required": false
                }
            },
            "sensors" : {
                "primary" : {
                    "name": "Sensor",
                    "description": "A number sensor",
                    "types" : ["DT_Number"],
                    "required": true
                }
            }
        },
        "lines": {
            "name" : "Lines chart",
            "height" : 3,
            "width" : 6,
            "min_height" : 2,
            "min_width" : 4,
            "max_height" : 6,
            "max_width" : 10,
            "options" : {
                "hideLabels" : {
                    "name": "Hide the widget labels",
                    "description": "Hide the top and left widget labels",
                    "type": "boolean",
                    "default": "False"
                },
                "chartMinValue" : {
                    "name": "Chart minimun value",
                    "description": "Set the chart minimum value",
                    "type": "number",
                    "default": null,
                    "required": false
                },
                "chartMaxValue" : {
                    "name": "Chart maximum value",
                    "description": "Set the chart maximum value",
                    "type": "number",
                    "default": null,
                    "required": false
                },
                "dateMode" : {
                    "name": "Chart mode",
                    "description": "Set the chart mode plot",
                    "type": "choice",
                    "default": "lastWeek",
                    "required": false,
                    "choices": {
                        "lastHour": "Current hour(s)",
                        "lastDay": "Current day(s)",
                        "lastWeek": "Current week(s)",
                        "lastMonth": "Current month(s)",
                        "day": "Specific day(s)",
                        "week": "Specific week(s)",
                        "month": "Specific month(s)",
                        "year": "Specific year(s)",
                        "fromto": "From to date"
                    }
                },
                "currentperiod" : {
                    "name": "Duration",
                    "description": "Set duration from current (in hour, day, week or month)",
                    "type": "number",
                    "default": 1,
                    "required": false
                },
                "interval" : {
                    "name": "Chart interval",
                    "description": "Set the chart interval value",
                    "type": "choice",
                    "default": "hour",
                    "required": false,
                    "choices": {
                        "minute": "Minute",
                        "hour": "Hour",
                        "week": "Week",
                        "month": "Month",
                        "year": "Year"
                    }
                },
                "selector" : {
                    "name": "Chart function",
                    "description": "Set the chart math function on interval",
                    "type": "choice",
                    "default": "avg",
                    "required": false,
                    "choices": {
                        "min": "Minimum value",
                        "max": "Maximum value",
                        "avg": "Average of values",
                        "sum": "Sum of values"
                    }
                }
            },
            "sensors" : {
                "series" : {
                    "name": "Data",
                    "description": "Data series",
                    "types" : ["DT_Number"],
                    "group": true,
                    "groupmin": 1,
                    "groupmax": 5
                }
            }
        },
        "step": {
            "name" : "Step chart",
            "height" : 3,
            "width" : 4,
            "min_height" : 2,
            "min_width" : 4,
            "max_height" : 6,
            "max_width" : 10,
            "options" : {
                "hideLabels" : {
                    "name": "Hide the widget labels",
                    "description": "Hide the top and left widget labels",
                    "type": "boolean",
                    "default": "False"
                }
            },
            "sensors" : {
                "primary" : {
                    "name": "Sensor",
                    "description": "A bool sensor",
                    "types" : ["DT_Bool"],
                    "required": true
                }
            }
        }
    }
}
