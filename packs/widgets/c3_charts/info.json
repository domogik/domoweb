{
    "json_version" : 2,
    "identity" : {
        "type" : "dmw_widgetset",
        "id" : "c3_charts",
        "version" : 1,
        "name" : "Charts",
        "description" : "Basic charts widgets with c3.js",
        "author" : "Fritz SMH",
        "author_email" : "fritz.smh@gmail.com"
    },
    "widgets": {
        "spline": {
            "name" : "Spline chart",
            "height" : 2,
            "width" : 4,
            "options" : {
                "hideLabels" : {
                    "name": "Hide the widget labels",
                    "description": "Hide the top and left widget labels",
                    "type": "boolean",
                    "default": "False"
                },
                "chartMinValue" : {
                    "name": "Chart minimun value",
                    "description": "Set the chart minimum value",
                    "type": "number",
                    "default": null,
                    "required": false
                },
                "chartMaxValue" : {
                    "name": "Chart maximum value",
                    "description": "Set the chart maximum value",
                    "type": "number",
                    "default": null,
                    "required": false
                }
            },
            "sensors" : {
                "primary" : {
                    "name": "Sensor",
                    "description": "A number sensor",
                    "types" : ["DT_Number"],
                    "required": true
                }
            }
        }
    }
}
